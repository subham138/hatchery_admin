<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-1"><%= header %></h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item"><a href="#" class="text-muted">Home</a></li>
                        <!-- <li class="breadcrumb-item text-muted active" aria-current="page">Library</li> -->
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <% if(message){ %>
                <div class="col-md-12">
                    <div class="alert alert-<%= message.type %> alert-dismissible bg-<%= message.type %> text-white border-0 fade show"
                        role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= message.message %>
                    </div>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <button type="button" class="btn btn-primary float-right mb-4" onclick="routeToNextPage('/user/edit', {id: 0}, true)">
                            <i class="fa fa-plus mr-2"></i>Add
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table id="default_order" class="table table-striped table-bordered display no-wrap"
                            style="width:100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Company Name</th>
                                    <th>User Name</th>
                                    <th>User ID</th>
                                    <th>Action</th>
                                    <!-- <th>Manage</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data.length > 0){
                                    let i = 1
                                data.forEach(dt => { %>
                                    <tr>
                                        <td><%= i %></td>
                                        <td><%= dt.comp_name %>(<%= dt.ucrc %>)</td>
                                        <td><%= dt.user_name %></td>
                                        <td><%= dt.phone %></td>
                                        <td>
                                            <button type="button" class="btn btn-primary mb-4" onclick="routeToNextPage('/user/edit', {id: '<%= dt.id %>'}, true)">
                                                <i class="fa fa-pencil-alt mr-2"></i>Edit
                                            </button>
                                        </td>
                                        <!-- <td>
                                            <button type="button" class="btn btn-secondary float-right mb-4" onclick="routeToNextPage('/user/manage', {id: '<%= dt.id %>'}, true)">
                                                <i class="fa fa-eye-alt mr-2"></i>View
                                            </button>
                                        </td> -->
                                    </tr>
                                <% i++;
                            })}else{ %>
                                    <tr>
                                        <td colspan="8" class="text-center text-danger">No data found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>