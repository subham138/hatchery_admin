                            <script>
                                function routeToNextPage(url, params, encode = true){
                                    var query_string = ''
                                    if(Object.keys(params).length > 0){
                                        for(let dt of Object.keys(params)){
                                            if(query_string != ''){
                                                query_string = query_string + `&${dt}=${encodeURIComponent(window.btoa(params[dt]))}`
                                            }else{
                                                query_string = query_string + `${dt}=${encodeURIComponent(window.btoa(params[dt]))}`
                                            }
                                        }
                                    }
                                    var route_url = `${url}?${query_string}`
                                    window.location.href = route_url
                                }
                            </script>
                        <% } else { %>
