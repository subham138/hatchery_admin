<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
    style="background:url(/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <% if(message){ %>
            <div class="col-md-12">
                <div class="alert alert-<%= message.type %> alert-dismissible bg-<%= message.type %> text-white border-0 fade show"
                    role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= message.message %>
                </div>
            </div>
        <% } %>
        <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(/images/log_card.jpg);">
        </div>
        <div class="col-lg-5 col-md-7 bg-white">
            <div class="p-3">
                <div class="text-center">
                    <img src="/images/chicken1.png" width="35%" height="100%" alt="wrapkit">
                </div>
                <h2 class="mt-3 text-center">Sign In</h2>
                <p class="text-center">Enter your email address and password to access the panel.</p>
                <form class="mt-4" method="post" action="/login">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="user_id">UserId</label>
                                <input class="form-control" id="user_id" name="user_id" type="text" placeholder="enter your userId">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="password">Password</label>
                                <input class="form-control" id="password" name="password" type="password" placeholder="enter your password">
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-block btn-dark">Sign In</button>
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            Don't have an account? <a href="#" class="text-danger">Sign Up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>